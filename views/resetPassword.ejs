<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Reset Your Password</h5>

          <% if (locals.messages.errors) { %>
            <% locals.messages.errors.forEach(error => { %>
              <div class="alert alert-danger"><%= error.msg %></div>
            <% }) %>
          <% } %>

          <% if (locals.messages.success) { %>
            <% locals.messages.success.forEach(s => { %>
              <div class="alert alert-success"><%= s.msg %></div>
            <% }) %>
          <% } %>

          <form action="/reset/<%= token %>" method="POST">
            <div class="mb-3">
              <label for="password" class="form-label">New password</label>
              <input type="password" class="form-control" id="password" name="password" required minlength="8">
            </div>
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirm password</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="8">
            </div>
            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
