<head>
    <title>Bet On Me</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
        integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/userGoal.css">
</head>

<body>
    <div class="container">
        <!-- Left Section: Profile -->
        <div class="profile-section">
            <div class="profile-picture">
                <span>Profile Picture</span>
            </div>
            <h2 class="user-name"> User Name </h2>
            <p class="goal-label">Big thing I want to accomplish!</p>
            <div class="big-thing">
                <input type="text" placeholder="Enter Your Goal" id="bigThing" name="goal">
                <button class="edit-btn"><i class="fa-solid fa-pen"></i></button>
                <!-- <button class="add-btn" id="saveBigThing"><i class="fa-solid fa-plus"></i></button> -->
            </div>
            <h4>Goal Wager</h3>
                <div class="user-money">$</div>
        </div>
    </div>

    <!-- Right Section: Steps -->
    <div class="container">
        <div class="user-step">
            <form class="input-area" action="/task/createTask" method="POST">
                <input type="text" id="task-input" placeholder="Enter the steps to get there" name="title">
                <input type="text" id="hide-task" placeholder="Name" name="_id">
                <button type="submit" id="add-task-btn"><i class="fa-solid fa-plus"></i></button>
            </form>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>

            <div class="user-steps">
                <!-- Task List -->
                <ul id="task-list">
                    <% tasks.forEach(task => {%>
                        <li class="task-buttons <%= task.completed ? 'completed' : '' %>" data-id="<%= task._id %>">
                            <input
                                name="checkbox"
                                type="checkbox"
                                class="checkbox"
                                <%=task.task_is_completed ? 'checked' : '' %>
                                data-completed="<%= task.task_is_completed %>"
                            />
                                <%= task.task %>
                            <span name="<%= task._id %>" class="task-text <%= task.task_is_completed ? 'strike-through' : '' %>"> <%= task.task_name %></span>

                            <!-- Default buttons -->
                            <button class="edit-btn" title="Edit"><i class="fa-solid fa-pen"></i></button>
                            <button class="delete-btn" title="Delete"><i class="fa-solid fa-trash"></i></button>
                            <input type="hidden" class="task-id" value="<%= task._id %>">

                            <!-- Edit view-->
                             <form class="edit-task-form d-none">
                                <input
                                    name="task-input"
                                    class="task-input d-none"
                                    type="text"
                                    value="<%= task.task_name %>"
                                />
                                <span>
                                    <button class="save-btn d-none" title="Save"><i class="fa-solid fa-check"></i></button>
                                    <button class="cancel-btn d-none" title="Cancel"><i class="fa-solid fa-xmark"></i></button>
                                </span>
                            </form>
                        </li>
                    <% }) %>
                </ul>
            </div>
            <button class="goal-completed">Goal Completed</button>
        </div>
    </div>
    <script src="/js/main.js"></script>
</body>
