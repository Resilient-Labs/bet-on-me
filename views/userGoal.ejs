<head>
    <title>Bet On Me</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
        integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/userGoal.css">
    <!-- Stripe.js -->
    <script src="https://js.stripe.com/v3/"></script>
</head>

<body>
    <!-- Left Section: Profile -->
    <div class="container">
        <div class="profile-section">
            <div class="profile-picture">
                <span>Profile Picture</span>
            </div>
            <h2 class="user-name">
                <%= user.userName %>
            </h2>
            <p class="goal-label">
                <%= goals?.name ? goals.name : "Big thing I want to accomplish!" %>
            </p>

            <% if (goals) { %>
                <div class="big-thing">
                    <%if(goals?.user==user.id){ %>
                        <form class="input-area goal-setting" action="/goal/" method="POST">
                            <input type="text" placeholder="Enter Your Goal" id="bigGoal" name="name"
                                value="<%= goals?.name %>" />
                            <!-- have the original inputed goal inside the input field -->
                            <button class="edit-btn"><i class="fa-solid fa-pen"></i></button>
                            <button class="add-btn" id="saveBigThing"><i class="fa-solid fa-plus"></i></button>
                        </form>
                        <%}%>
                </div>

                <h4>Goal Wager</h4>
                <% if (goals?.wagerPaid) { %>
                    <div class="user-money">$<%= goals?.wagerAmount %>
                    </div>
                    <p style="color: #4CAF50; margin-top: 10px;"> Wager Placed</p>
                    <% } else { %>
                        <div style="display: flex; gap: 10px; align-items: center; margin-top: 10px;">
                            <input type="number" id="wager-amount" placeholder="Amount" min="1" step="1"
                                style="width: 100px; padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
                            <button id="place-wager-btn" class="add-btn">
                                <i class="fa-solid fa-dollar-sign"></i> Place Wager
                            </button>
                        </div>
                        <% } %>
                            <% } else { %>
                                <!-- add form -->
                                <div class="big-thing">
                                    <form class="input-area goal-setting" action="/goal/" method="POST">
                                        <input type="text" placeholder="Enter Your Goal" id="bigGoal" name="name"
                                            value="<%= goals?.name %>" />
                                        <button class="edit-btn"><i class="fa-solid fa-pen"></i></button>
                                        <button class="add-btn" id="saveBigThing"><i
                                                class="fa-solid fa-plus"></i></button>
                                    </form>
                                </div>
                                <h4>Goal Wager</h4>
                                <p style="color: #999;">Create a goal first</p>
                                <% } %>
        </div>
    </div>

    <!-- right section: steps -->
    <div class="container">
        <div class="user-step">
            <form class="input-area" action="/task/createTask" method="POST">
                <input type="text" id="task-input" placeholder="Enter the steps to get there" name="title">
                <input type="text" id="hide-task" placeholder="Name" name="_id">
                <button type="submit" id="add-task-btn"><i class="fa-solid fa-plus"></i></button>
            </form>
            <% if (typeof error !=='undefined' ) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>

                    <div class="user-steps">
                        <!-- Task List -->
                        <ul id="task-list">
                            <% for(var i=0; i<tasks.length; i++) {%>
                                <li class="task-buttons <%= tasks[i].completed ? 'completed' : '' %>">
                                    <input type="checkbox" class="checkbox" <%=tasks[i].completed ? 'checked' : '' %>
                                    data-id="<%= tasks[i]._id %>">
                                        <span name="<%= tasks[i]._id %>">
                                            <%=tasks[i].task_name%>
                                        </span>
                                        <button class="edit-btn"><i class="fa-solid fa-pen"></i></button>
                                        <button class="delete-btn"><i class="fa-solid fa-trash"></i></button>
                                        <input type="hidden" class="task-id" value="<%= tasks[i]._id %>">
                                </li>
                                <% } %>
                        </ul>
                    </div>
                    <!-- <button class="goal-completed">Goal Completed</button> -->
                    <form method="POST" action="/goals/<%= goal._id %>?_method=PUT" style="display:inline;">
                        <button type="submit" class="complete-btn">Complete</button>
                    </form>

        </div>
    </div>

    <script src="/js/goal.js"></script>
    <script src="/js/stripe.js"></script>
</body>