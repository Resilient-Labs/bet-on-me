<div class="error-page">
  <pre>
<%= figlet.textSync("404", { horizontalLayout: "default" }) %>
  </pre>

  <pre>
<%= figlet.textSync(message, { horizontalLayout: "default" }) %>
  </pre>

  <button
    onclick="history.back()"
    style="
      margin-top: 20px;
      padding: 10px 16px;
      font-family: monospace;
      font-size: 14px;
      cursor: pointer;
    "
  >
    ← Go Back
  </button>
</div>
