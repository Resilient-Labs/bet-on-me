  <p style="color: gray; margin: 3px 0;">@<%= user.userName %></p>
  <p style="color: gray; margin: 3px 0;"><%= user.email %></p>

  <p style="margin-top: 20px; color: #888">User ID: <%= user._id %></p>
<form 
  action="/users/test-upload/123456789012345678901234"
  method="POST"
  enctype="multipart/form-data"
>
  <input type="file" name="profile_image" required>
  <button type="submit">Upload Test Image</button>
</form>


</div>
