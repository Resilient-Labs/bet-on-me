<div class="modal fade" id="resetModal" tabindex="-1" aria-labelledby="resetModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-s">
    <div class="modal-content login-modal">
      <div class="modal-body p-4">

        <button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>

        <h5 class="modal-title mb-4">Reset my password</h5>

          <!-- ERROR MESSAGES -->
          <% if (locals.messages.errors && 
                locals.messages.modal && 
                locals.messages.modal[0] === 'reset') { %> 
              <% locals.messages.errors.forEach( error => { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error.msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
          <% }) %> 
          <% } %> 

          <!-- INFO MESSAGES -->
          <% if (locals.messages.info) { %> 
          <% locals.messages.info.forEach( info => { %>
              <div class="alert alert-info alert-dismissible fade show" role="alert">
              <%= info.msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
          <% }) %> 
          <% } %>

        <!-- FORM -->
        <form action="/passwordReset" method="POST">
          <div class="mb-3">
            <label for="resetEmail" class="form-label">Email</label>
            <input type="email" class="form-control" name="resetEmail" id="resetEmail" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Send a link</button>
        </form>

        <!-- FOOTER --> 
        <section class="mt-3 text-center">
            <small class="d-block">Remember your password? <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss="modal">Login</a></small>
        </section>
      </div>
    </div>
  </div>
</div>